<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 border-right bg-light">
      <ul class="navbar-nav d-flex flex-md-column">
        <li class="nav-item nav-tabs">
          <a>メニュー</a>
        </li>
        <li class="nav-item">
          <%= link_to "カメラチェック結果一覧", attendances_path, class: "nav-link text-secondary"  %>
        </li>
        <li class="nav-item">
          <%= link_to "ユーザー一覧", employees_path, class: "nav-link text-secondary"  %>
        </li>
      </ul>
    </div>
    <div class="col-md-10">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active" aria-current="page">カメラチェック結果一覧</li>
        </ol>
      </nav>
      <div>
        <% if @attendances.any? %>
        <%= paginate @attendances %>
          <div class="container-fluid">
            <div class="table-responsive">
              <table class="table table-striped table-md">
                <tr>
                  <th>従業員コード</th>
                  <th>名前</th>
                  <th>点数</th>
                  <th>経路</th>
                  <th>作成時間</th>
                </tr>
                <% @attendances.each do |attendance| %>
                <tr>
                  <td><%= attendance.employee.employee_id %></td>
                  <td><%= attendance.employee.name %></td>
                  <td><%= attendance.point %></td>
                  <td><%= attendance.ride_in %></td>
                  <td><%= attendance.created_at.strftime('%m/%d-%k:%M') %></td>
                </tr>
                <% end %>
              </table>
            </div>
          </div>
        <% else %>
          <%= "カメラチェックのデータがありません" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
