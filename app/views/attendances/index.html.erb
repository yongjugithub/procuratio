<nav aria-label="パンくずリスト">
  <ol class="breadcrumb mb-1">
    <li class="breadcrumb-item"><a>トップ</a></li>
    <li class="breadcrumb-item active" aria-current="page"><a>カメラチェック結果一覧</a></li>
  </ol>
</nav>
<nav class="navbar navbar-white bg-white">
  <span class="navbar-text"></span>
</nav>
<div class="container-fluid">
  <div>
    <% if @attendances.any? %>
      <div class="container-fluid">
        <%= paginate @attendances %>
        <div class="table-responsive">
          <table class="table table-striped table-md">
            <tr>
              <th>従業員ID</th>
              <th>名前</th>
              <th>経路</th>
              <th>項目1</th>
              <th>項目2</th>
              <th>項目3</th>
              <th>項目4</th>
              <th>項目5</th>
              <th>項目6</th>
              <th>項目7</th>
              <th>項目8</th>
              <th>項目9</th>
              <th>項目10</th>
              <th>点数</th>
              <th>作成時間</th>
            </tr>
            <% @attendances.each do |attendance| %>
            <tr>
              <td><%= attendance.employee.employee_id %></td>
              <td><%= link_to "#{attendance.employee.name}",employee_path(attendance.employee.id)  %></td>
              <td><%= attendance.ride_in %></td>
              <td><%= display_circle(attendance.attr_one) %></td>
              <td><%= display_circle(attendance.attr_two) %></td>
              <td><%= display_circle(attendance.attr_three) %></td>
              <td><%= display_circle(attendance.attr_four) %></td>
              <td><%= display_circle(attendance.attr_five) %></td>
              <td><%= display_circle(attendance.attr_six) %></td>
              <td><%= display_circle(attendance.attr_seven) %></td>
              <td><%= display_circle(attendance.attr_eight) %></td>
              <td><%= display_circle(attendance.attr_nine) %></td>
              <td><%= display_circle(attendance.attr_ten) %></td>
              <td><%= attendance.point %></td>
              <td><%= attendance.created_at.strftime('%m/%d-%H:%M') %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    <% else %>
      <%= "カメラチェックのデータがありません" %>
    <% end %>
  </div>
</div>
