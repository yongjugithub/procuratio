<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">モニタリングチェック</li>
    </ol>
  </nav>
  <%= form_with(model: @attendance, local: true) do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :employee_id, '従業員コード' %>
    <%= f.number_field :employee_id, class: 'form-control' %>
  </div>
    <%= f.submit 'チェック完了', class: 'btn btn-primary' %>
  <% end %>
</div>
